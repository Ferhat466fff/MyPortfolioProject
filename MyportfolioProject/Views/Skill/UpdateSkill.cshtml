@model MyportfolioProject.Models.Tbl_Skills
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Güncelleme Sayfası</h2>
<br />
<br />

<form method="post">
    <input type="hidden" name="SkillId" value="@Model.SkillId" />

    <label>Yetenek Adı</label>
    <input type="text" name="SkillName" value="@Model.SkillName" class="form-control" />
    <br />
    <label>Yetenek Bilgisi</label>
    <input type="text" name="Value" value="@Model.Value" class="form-control" />
    <br />



    <button class="btn btn-outline-primary">Kaydet</button>





</form>

