@model List<MyportfolioProject.Models.Tbl_Teams>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<h3>Takım Sayfası</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim Adresi</th>
        <th>İsim Soyisim</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Twitter Adresi</th>
        <th>Facebook Adresi</th>
        <th>Linkedln Adresi</th>
        <th>Instagram Adresi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.TeamId</td>
            <td>@item.ImageUrl</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.TwitterUrl</td>
            <td>@item.FacebookUrl</td>
            <td>@item.LinkedinUrl</td>
            <td>@item.InstagramUrl</td>
            <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger ">Sil</a></td> @*adres verdik-->controllr/ındex/id ye göre sil*@
            <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }



</table>
<br />
<a href="/Team/AddTeam" class="btn btn-outline-primary">Yeni Takım Arkadaşı Ekle</a>@*butona tıklandıgında addproject ıddex yollaycak*@




