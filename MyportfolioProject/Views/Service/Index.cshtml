@model List<MyportfolioProject.Models.Tbl_Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Servis Sayfası</h3>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.ServesId</td>
    <td>@item.Title</td>
    <td>@item.Description</td>
    <td>@(item.Status==true ? "Aktif" :"Pasif")</td>@*Aktif Pasif olasyı için-->? ise demek :-->değil ise demek*@
    <td><a href="/Service/DeleteService/@item.ServesId" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/Service/UpdateService/@item.ServesId" class="btn btn-outline-info">Güncelle</a></td>
    <td><a href="/Service/MakeActive/@item.ServesId" class="btn btn-outline-success">Aktif </a></td>
    <td><a href="/Service/MakePassive/@item.ServesId" class="btn btn-outline-secondary">Pasif </a></td>
</tr>
    }
</table>
<td><a href="/Service/AddService/" class="btn btn-outline-dark">Yeni Hizmet Ekle</a></td>
