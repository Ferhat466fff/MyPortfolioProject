@model MyportfolioProject.Models.Tbl_Abauts
@{//projeismi/dosya ismi/tablo ismi
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h3>Hakkımda Güncelleme Sayfası</h3>
@*güncelle tıklandıgında verileri alma*@
<form method="post">
    <input type="hidden" name="AboutId" value="@Model.AboutId" />@*Model.AboutId sayesinde verileri cekiyoruz*@
    <label>Resim Url</label>
    <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />@*input-->textbox*@
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" name="Description" value="@Model.Description" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>

</form>


