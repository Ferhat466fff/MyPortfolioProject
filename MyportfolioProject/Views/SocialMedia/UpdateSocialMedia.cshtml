@model MyportfolioProject.Models.Tbl_Social_Medias
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sosyal Medya Güncelleme Sayfası</h2>
<br />
<br />

<form method="post">

    <input type="hidden" value="@Model.SocialMediaId"  name="SocialMediaId"  />

    <label>Sosyal Medya Adı</label>
    <input type="text" name="SocialMediaName" value="@Model.SocialMediaName" class="form-control" />
    <br />
    <label>URL</label>
    <input type="text" name="Url" value="@Model.Url"class="form-control" />
    <br />
    <label>Icon</label>
    <input type="text" name="Icon" value="@Model.Icon"class="form-control" />
    <br />



    <button class="btn btn-outline-primary">Güncelle</button>





</form>


