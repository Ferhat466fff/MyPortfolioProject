@model List<MyportfolioProject.Models.Tbl_Projects>
@{//projeismi/dosya ismi/tablo ismi
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;//bir bir arttırdık ıdleri(bazen sıkıntı cıktıgı icin boyle yaptık)
}


<br />
<br />

<h3>Projeler Sayfası</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Proje Adı</th>
        <th>Kategori</th>
        <th>Github Linki</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@item.ProjectId</td>
    <td><img src="@item.ImageUrl" style="height:40px;width:40px" /></td>
    <td>@item.ProjectName</td>
    <td>@(item.Tbl_Categories != null ? item.Tbl_Categories.CategoryName : "")</td>
    @*tblkategoriler null değilse kategoriad'a erişir. *@
    <td><a href="@item.GithubUrl" target="_blank">Github Linki</a></td>
    <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger ">Sil</a></td>
    @*adres verdik-->controllr/ındex/id ye göre sil*@
    <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-info">Güncelle</a></td>

</tr>
    }



</table>
<br />
<a href="/Project/AddProject" class="btn btn-outline-primary">Yeni Proje Ekle</a>@*butona tıklandıgında addproject ıddex yollaycak*@

