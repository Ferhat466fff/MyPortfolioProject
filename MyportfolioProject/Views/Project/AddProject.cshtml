@model MyportfolioProject.Models.Tbl_Projects
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Proje Ekleme Sayfası</h3>

<form method="post">
    <label>Proje Adı</label>
    <input type="text" name=ProjectName class="form-control" />
    <br />
    <label>Resim Url</label>
    <input type="text" name=ImageUrl class="form-control" />
    <br />
    <label>Github Linki</label>
    <input type="text" name=GithubUrl class="form-control" />
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.dgr,"kategoriyi seçin" ,new { @class = "form-control" })
                                             @*(viewbag türü).viewbeg'e 'isim vermiştik(dgr)*@

    <button class="btn btn-outline-dark">Kaydet</button>

</form>

