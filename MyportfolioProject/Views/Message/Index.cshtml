@model List<MyportfolioProject.Models.Tbl_Messages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<h3>Takım Sayfası</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.MessageId</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.MessageContent</td>
            <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger ">Sil</a></td> @*adres verdik-->controllr/ındex/id ye göre sil*@
            <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }



</table>
<br />
<a href="/Message/AddMessage" class="btn btn-outline-primary">Yeni Takım Arkadaşı Ekle</a>@*butona tıklandıgında addproject ıddex yollaycak*@


