@model List<MyportfolioProject.Models.Tbl_Contacts>
@{//projeismi/dosya ismi/tablo ismi
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>İletişim Sayfası</h3>

<table class="table table-bordered">

    <tr>
        <td>#</td>
        <td>İsim Soyisim</td>
        <td>Adres</td>
        <td>Telefon</td>
        <td>Email</td>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger ">Sil</a></td> @*adres verdik-->controllr/ındex/id ye göre sil*@
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>
<td><a href="/Contact/AddContact/" class="btn btn-outline-dark ">Yeni İletişim Bilgileri Ekle</a></td>

